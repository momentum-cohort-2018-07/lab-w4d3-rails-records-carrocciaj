
<div class="container p-3">
<div class="card card w-60" style="width: 50rem;">
<h1 class="card-header text-center">Listing Albums</h1>
 
<table class="table table-striped table-borderless table-hover">
  <thead class="thead-dark">
  <tr class="table-bordered">
    <th class="card-title" scope="col">Title</th>
    <th class="card-title" scope="col">Artist Name</th>
    <th class="card-title" scope="col">Year Released</th>
    <th class="card-title" colspan="3"></th>
  </tr>
  </thead>
  <% @album.each do |album| %>
    <tr class="border-bottom">
      <td><%= album.title %></td>
      <td><%= album.artist_name %></td>
      <td><%= album.year_released %></td>
      <td><%= link_to 'Show', album_path(album) %></td>
      <td><%= link_to 'Edit', edit_album_path(album) %></td>
      <td><%= link_to 'Delete', album_path(album),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
   
  <% end %>
</table>

<%= link_to 'New Album', new_album_path, :class =>"btn btn-primary ml-1 w-25" %>
<%= link_to 'Back', {controller: 'welcome'}, :class =>"btn btn-primary my-1 ml-1 w-25" %>
</div>
</div>