
<h1>Listing Albums</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Artist Name</th>
    <th>Year Released</th>
    <th colspan="3"></th>
  </tr>
 
  <% @album.each do |album| %>
    <tr>
      <td><%= album.title %></td>
      <td><%= album.artist_name %></td>
      <td><%= album.year_released %></td>
      <td><%= link_to 'Show', album_path(album) %></td>
      <td><%= link_to 'Edit', edit_album_path(album) %></td>
      <td><%= link_to 'Delete', album_path(album),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Album', new_album_path %>
