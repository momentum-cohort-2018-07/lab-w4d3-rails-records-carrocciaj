
<div class="card ml-3 mt-3" style="width: 18rem;">
<h1>New Album</h1>
<div class="form-group">
<%= form_with scope: :album, url: albums_path, local: true do |form| %>
  <div class="ml-2 mb-2">
    <%= form.label :title %><br>
    <%= form.text_field :title, :class => "form-control w-auto" %>
  </div>
  <div class="ml-2 mb-2">
    <%= form.label :artist_name %><br>
    <%= form.text_field :artist_name, :class => "form-control w-auto" %>
  </div>
  <div class="ml-2 mb-2">
    <%= form.label :year_released %><br>
    <%= form.text_field :year_released, :class => "form-control w-auto" %>
  </div>
  <div>
    <%= form.submit :class=>"ml-2 btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Cancel', albums_path, :class=>" ml-2 btn btn-secondary mt-1" %>
</div>
</div>
